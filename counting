import java.util.Scanner; 
  
public class counting { 
    
    public static void main(String [] arg) 
    {   
        Scanner input = new Scanner(System.in); 
        int number = 1 + (int)(100* Math.random());  
        int count = 10;
        int gue, guess; 
  
        System.out.println( 
            "A number is chosen between 1 to 100. "
            + "Guess the number in " + count+ " times."); 
        for (gue = 0; gue < count; gue++) { 
  
            System.out.println( 
                "Guess the number:");
            guess = input.nextInt(); 
  
            if (number == guess) { 
                System.out.println( 
                    "You guessed the number!"); 
                break; 
            } 
            else if (number > guess && gue != count - 1) { 
                System.out.println( 
                    "The number is greater than " + guess); 
            } 
            else if (number < guess && gue != count - 1) { 
                System.out.println( 
                    "The number is less than " + guess); 
            } 
        } 
  
        if (gue == count) { 
            System.out.println( 
                "You have ran out of your "+ count + " guesses." ); 
  
            System.out.println( 
                "The number was " + number); 
        } 
    } 
} 
